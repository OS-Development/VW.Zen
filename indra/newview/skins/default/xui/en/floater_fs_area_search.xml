<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
 legacy_header_height="18"
 can_resize="true"
 height="350"
 layout="topleft"
 name="area_search"
 help_topic="objects"
 save_rect="true"
 save_visibility="true"
 title="Area Search for Objects"
 width="800">
	<text
	 name="counter"
	 height="15"
	 width="300"
	 left="50"
	 top="30"
	 follows="left|top">
	 Listed / Pending / Total
	</text>
	<scroll_list
	 draw_heading="true"
	 follows="all"
	 height="170"
	 layout="topleft"
     left="10"
	 multi_select="true"
	 name="result_list"
	 top_delta="20"
	 width="780">
	 
		<scroll_list.columns
         name="Name"
		 label="Name"
         width="200"/>
		<scroll_list.columns
         name="Description"
		 label="Description"
         width="200"/>
		<scroll_list.columns
         name="Location"
		 label="Location"
         width="150"/>
		<scroll_list.columns
         name="Owner"
		 label="Owner"
         width="100"/>
		<scroll_list.columns
         name="Group"
		 label="Group"
         width="150"/>		
	</scroll_list>
	<text
	 name="name_label"
	 type="string"
     length="1"
     follows="left|bottom"
     height="20"
     layout="topleft"
     left_delta="0"
     top_pad="15"
     width="87">
	 Name:
	</text>
	<line_editor
	 name="Name query chunk"
	 bevel_style="in"
	 border_style="line"
	 border_thickness="1"
	 follows="left|bottom|right"
     height="20"
     layout="topleft"
     left_pad="3"
     top_delta="-3"
	 mouse_opaque="true"
     width="480" />
	 <button
     follows="bottom|right"
     height="23"
     layout="topleft"
     left_pad="5"
     name="Show Beacon"
	 label="Show Beacon"
     top_delta="0"
     width="100"/>
	<button
     follows="bottom|right"
     height="23"
     layout="topleft"
     left_pad="5"
     name="Clear Beacon"
	 label="Clear Beacon"
     top_delta="0"
     width="100"/>	
	<text
	 name="desc_label"
	 type="string"
     length="1"
     follows="left|bottom"
     height="20"
     layout="topleft"
     left="10"
	 top_pad="5"
	 width="87">
	 Description:
	</text>	
	<line_editor
	 name="Description query chunk"
	 follows="left|bottom|right"
     height="20"
     layout="topleft"
     left_pad="3"
     top_delta="-3"
     width="480" />	 
	 <button
     follows="bottom|right"
     height="23"
     layout="topleft"
     left_pad="5"
	 name="Look At"
	 label="Look At"
	 top_delta="0"
     width="100"/>
	<button
     follows="bottom|right"
     height="23"
     layout="topleft"
     left_pad="5"
	 name="Teleport"
	 label="Teleport"
	 top_delta="0"
     width="100"/>		 
	<text
	 name="owner_label"
	 type="string"
     length="1"
     follows="left|bottom"
     height="20"
     layout="topleft"
     left="10"
	 top_pad="5"
	 width="87">
	 Owner:
	</text>	
	<line_editor
	 name="Owner query chunk"
	 follows="left|bottom|right"
     height="20"
     layout="topleft"
     left_pad="3"
     top_delta="-3"
     width="480" />	
	 <button
     follows="bottom|right"
     height="23"
     layout="topleft"
     left_pad="5"
     name="Refresh"
	 image_overlay="Refresh_Off"
     top_delta="0"
     width="100"/>
	<button
     follows="bottom|right"
     height="23"
     layout="topleft"
     left_pad="5"
     name="Stop"
	 label="Stop"
     top_delta="0"
     width="100"/>
	<text
	 name="group_label"
	 type="string"
     length="1"
     follows="left|bottom"
     height="20"
     layout="topleft"
     left="10"
	 top_pad="5"
	 width="87">
	 Group:
	</text>	
	<line_editor
	 name="Group query chunk"
	 follows="left|bottom|right"
     height="20"
     layout="topleft"
     left_pad="3"
     top_delta="-3"
     width="480" />		
</floater>
