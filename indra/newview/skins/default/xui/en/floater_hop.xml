<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  legacy_header_height="18"
  can_resize="false"
  height="200"
  width="460"
  min_height="220"
  min_width="460"
  layout="topleft"
  name="grid_hop"
  class="grid_hop"
  help_topic="floater_hop"
  save_rect="true"
  title=""
  initial_mime_type="text/html">
  <panel
    top="35"
    bottom="200"
    height="150"
    follows="left|right|top|bottom"
    left="0"
    name="foo"
    auto_resize="false"
    width="460">
    <layout_stack
      top="0"
      bottom="200"
      follows="left|right|top|bottom"
      layout="topleft"
      left="15"
      animate="true"
      name="stack1"
      orientation="horizontal"
      width="440">
      <layout_panel
        left="0"
        top_delta="0"
        border="false"
          follows="all"
        height="50"
        layout="topleft"
        name="foo"
        auto_resize="false"
        width="210">
        <web_browser
          tab_stop="false"
          border_visible="false"
          bg_opaque_color="Black"
          bottom="0"
          left="0"
          name="thumbnail_login_html"
          width="200"
          height="200"
          initial_mime_type="text/html"
          start_url="about:blank"
          decouple_texture_size="true"/>
      </layout_panel>
      <layout_panel name="bar" 
        border="false"
        height="10"
        width="300"
        layout="topleft"
        left_delta="10"
        top="0"
        auto_resize="false">
        <layout_stack
          bottom="200"
          follows="left|right|top|bottom"
          layout="topleft"
          left="5"
          animate="false"
          name="stack2"
          orientation="vertical"
          top="0"
          height="10"
          width="200">
          <layout_panel
            border="false"
            height="30"
            layout="topleft"
            left="0"
            name="foo"
            auto_resize="false"
            width="200">
            <text
              follows="left|bottom"
              font="SansSerifBig"
              height="16"
              left="0"
              name="start_location_text"
              top="0"
              width="200">
                Teleport to a different grid:
            </text>
          </layout_panel>
          <layout_panel
            border="false"
            height="90"
            layout="topleft"
            left="0"
            name="foo"
            top_delta="20"
            auto_resize="false"
            width="400">
            <check_box
              control_name="HopKeepOldSessionAlive"
              follows="left|top"
              height="20"
              label="Keep this session alive"
              layout="topleft"
              left="0"
              top_pad="0" 
              name="keep_alive"
              width="150" />
            <check_box
              control_name="HopAutoLogin"
              follows="left|top"
              height="20"
              label="Autologin last user"
              layout="topleft"
              left="0"
              top_pad="1" 
              name="try_autologin"
              width="150" />
          </layout_panel>
          <layout_panel
            border="false"
            height="80"
            follows="left|right|bottom"
            left="0"
            name="foo"
            auto_resize="false"
            width="400">
            <button
              follows="left|top"
              height="23"
              image_unselected="PushButton_On"
              image_selected="PushButton_On_Selected"
              label="Hop!"
              label_color="White"
              layout="topleft"
              left="0"
              name="hop_btn"
              width="90" />
            <button
              follows="left|top"
              height="23"
              image_unselected="PushButton_On"
              image_selected="PushButton_On_Selected"
              label="Cancel"
              label_color="White"
              layout="topleft"
              left_delta="100"
              name="cancel_btn"
              top_delta="0"
              width="90" />
          </layout_panel>
        </layout_stack>
      </layout_panel>
    </layout_stack>
  </panel>
</floater>
