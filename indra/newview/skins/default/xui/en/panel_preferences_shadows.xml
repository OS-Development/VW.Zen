<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Shadows"
 layout="topleft"
 left="102"
 name="shadows_panel"
 top="1"
 width="517">
		<text
		type="string"
		length="1"
		follows="left|top"
		height="12"
		layout="topleft"
		left="10"
		name="ShadowBlurText"
		top="15"
		width="308">
			Shadows:
		</text>
		<slider
        control_name="RenderShadowResolutionScale"
        can_edit_text="false"
        decimal_digits="1"
        follows="left|top"
        height="16"
        increment="0.1"
        initial_value="1"
        label="Shadow Map Res."
        label_width="140"
        layout="topleft"
	    tool_tip="Scale of shadow map resolution vs. screen resolution (higher value means better shadow resolution)"
        left="30"
        max_val="3"
        min_val="0.1"
        name="ShadowMapResolution"
        top_pad="8"
        width="400" />
        <slider
        control_name="RenderShadowBlurSize"
        can_edit_text="false"
        decimal_digits="1"
        follows="left|top"
        height="16"
        increment="0.1"
        initial_value="1"
        label="Shadow Blur Size"
        label_width="140"
        layout="topleft"
        left="30"
        max_val="4"
        min_val="0"
        name="BlurSize"
        width="400" />
        <slider
        control_name="RenderShadowBlurDistFactor"
        can_edit_text="false"
        decimal_digits="1"
        follows="left|top"
        height="16"
        increment="0.05"
        initial_value="1"
        label="Blur on Distance"
        label_width="140"
        layout="topleft"
        left="30"
        max_val="1"
        min_val="0"
        name="BlurDistance"
        width="400" />
        <slider
        control_name="RenderShadowBlurSamples"
        can_edit_text="false"		
        decimal_digits="0"
        follows="left|top"
        height="16"
        increment="1"
        initial_value="4"
        label="Blur Samples 1-16"
        label_width="140"
        layout="topleft"
        left="30"
        max_val="16"
        min_val="1"
        name=" BlurSamples"
        width="396" />
	    <text
		type="string"
		length="1"
		follows="left|top"
		height="12"
		layout="topleft"
		left="10"
		name="AmbientOcclusionText"
		top_pad="10"
		width="308">
			Ambient Occlusion:
		</text>
        <slider
        control_name="RenderSSAOScale"
        can_edit_text="false"
        decimal_digits="0"
        follows="left|top"
        height="16"
        increment="1"
        initial_value="40"
        label="SSAO Scale"
        label_width="140"
        layout="topleft"
        left="30"
        max_val="1000"
        min_val="0"
        name="SSAOScale"
        top_pad="8"
        width="405" />
        <slider
        control_name="RenderSSAOMaxScale"
        can_edit_text="false"
        decimal_digits="0"
        follows="left|top"
        height="16"
        increment="1"
        initial_value="200"
        label="SSAO Max Scale"
        label_width="140"
        layout="topleft"
        left="30"
        max_val="400"
        min_val="0"
        name="SSAOMaxScale"
        width="399" />
        <slider
        control_name="RenderSSAOFactor"
        can_edit_text="false"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="0.10"
        initial_value="0.30"
        label="SSAO Factor"
        label_width="140"
        layout="topleft"
        left="30"
        max_val="1"
        min_val="0"
        name="SSAOFactor"
        width="403" />
	    <text
		type="string"
		length="1"
		follows="left|top"
		visiblity_control="RenderGlow"
		height="16"
		layout="topleft"
		left="10"
		name="GlowOptionsText"
		top_pad="10"
		width="308">
			Glow Options:
		</text>
        <slider  
        control_name="RenderGlowIterations"
        can_edit_text="false"
        visiblity_control="RenderGlow"
        decimal_digits="1"
        enabled="true"
        follows="left|top"
        height="16"
        increment="1" 
        initial_value="1" 
        label="Strength"
        label_width="140"
		top_pad="8"
		left="30"
		max_val="5"
		min_val="0"
		mouse_opaque="true"
        name="GlowStrength"
		width="391" />
        <slider
        control_name="RenderGlowMinLuminance"
        can_edit_text="false"
        visiblity_control="RenderGlow"
        decimal_digits="1"
		follows="left|top"
        height="16"
        increment="0.1" 
        initial_value="3" 
        label="Min. Luminance"
        label_width="140"
		left="30"
		max_val="3"
		min_val="0"
		mouse_opaque="true"
        name="MinLuminance"
		width="394" />
        <slider
        control_name="RenderGlowWarmthAmount"
        can_edit_text="false"
        visiblity_control="RenderGlow"
        decimal_digits="1"
		follows="left|top"
        height="16"
        increment="0.1" 
        initial_value="3" 
        label="Glow Warmth"
        label_width="140"
		left="30"
		max_val="20"
		min_val="0"
		mouse_opaque="true"
        name="Warmth"
		width="400" />
        <slider
        control_name="RenderGlowWidth"
        can_edit_text="false"
        visiblity_control="RenderGlow"
        decimal_digits="1"
		follows="left|top"
        height="16"
        increment="0.1" 
        initial_value="3" 
        label="Glow Width"
        label_width="140"
		left="30"
		max_val="4"
		min_val="0"
		mouse_opaque="true"
        name="GlowWidth"
		width="394" />
        <slider
        control_name="RenderGlowMaxExtractAlpha"
        can_edit_text="false"
        visiblity_control="RenderGlow"
        decimal_digits="3"
		follows="left|top" 
        height="16"
        increment="0.001" 
        initial_value="0.065" 
        label="Glow MaxAlpha"
        label_width="140"
		left="30"
		max_val="0.1"
		min_val="0"
		mouse_opaque="true"
        name="GlowMaxAlpha"
		width="400" />
		<text
		type="string"
		length="1"
		follows="left|top"
		height="12"
		layout="topleft"
		left="10"
		name="HoverGlowOptionsText"
		top_pad="10"
		width="308">
			Hoverglow Options:
		</text>
	    <color_swatch
        can_apply_immediately="true"
        control_name="RenderHighlightColor"
        follows="left|top"
        height="60"
        layout="topleft"
        left="190"
        name="effect_color_swatch"
        tool_tip="Click to set your Hover Glow Color"
        width="47" />
        <spinner
        control_name="RenderHighlightBrightness"
        decimal_digits="1"
        follows="left|top"
        height="16"
        increment="0.1"
        initial_value="1"
        label="Brightness"
        label_width="80"
        layout="topleft"
        left="275"
        max_val="10"
        min_val="0.5"
        name="RenderHighlightBrightness"
        top_delta="0"
        width="135" />	
        <spinner
        control_name="RenderHighlightThickness"
        decimal_digits="1"
        follows="left|top"
        height="16"
        increment="0.1"
        initial_value="1"
        label="Thickness"
        label_width="80"
        layout="topleft"
        left="275"
		top_pad="10"
        max_val="10"
        min_val="0.1"
        name="RenderHighlightThickness"
        width="135" />
</panel>