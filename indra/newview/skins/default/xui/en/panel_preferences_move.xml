<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Move"
 layout="topleft"
 left="102"
 name="move_panel"
 top="1"
 width="517">
  
  <icon
	 follows="left|top"
	 height="18"
	 image_name="Move_Walk_Off"
   layout="topleft"
	 name="avatar_icon"
	 mouse_opaque="false"
	 visible="true"
	 width="18"
   top_pad="15"
   left="30" />
   <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="78"
   name="teleport_lbl"
   width="270"
   top_delta="2">
    Teleport:
  </text>
  <check_box
   control_name="NCLMTPDirect"
   follows="left|top"
   height="20"
   label="Double-click Teleport - Notecard Landmark"
   layout="topleft"
   left_delta="5"
   name="arrow_keys_move_avatar_check"
   width="237"
   top_pad="5"/>
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="78"
   name="keyboard_lbl"
   width="270"
   top_pad="15">
    Keyboard:
  </text>
  <check_box
   control_name="ArrowKeysAlwaysMove"
   follows="left|top"
   height="20"
   label="Arrow keys always move me"
   layout="topleft"
   left_delta="5"
   name="arrow_keys_move_avatar_check"
   width="237"
   top_pad="5"/>
  <check_box
   control_name="AllowTapTapHoldRun"
   follows="left|top"
   height="20"
   label="Tap-tap-hold to run"
   layout="topleft"
   left_delta="0"
   name="tap_tap_hold_to_run"
   width="237"
   top_pad="0"/>
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="78"
   name="mouse_lbl"
   width="270"
   top_pad="15">
    Mouse:
  </text>
  
  <check_box
     control_name="EnableMouselook"
     follows="left|top"
     height="20"
     label="Allow Mouselook"
     layout="topleft"
     left_delta="5"
     top_pad="5"
     name="AllowMouselook"
     width="256" />
  <check_box
   control_name="FirstPersonAvatarVisible"
   follows="left|top"
   height="20"
   label="Show me in Mouselook"
   layout="topleft"
   left_delta="0"
   name="first_person_avatar_visible"
   top_pad="0"
   width="256" />
   <check_box
     control_name="ShowCrosshairs"
     follows="left|top"
     height="20"
   enabled_control="EnableMouselook"
     label="Show Crosshairs in Mouselook"
     layout="topleft"
     left_delta="0"
     top_pad="0"
     name="ShowCrosshairs"
     width="256" />
  <check_box
     control_name="MouseSmooth"
     follows="left|top"
   enabled_control="EnableMouselook"
     height="20"
     label="Smooth Mouselook"
     layout="topleft"
     left_delta="0"
     top_pad="0"
     name="MouseSmooth"
     width="256" />
  <text
   type="string"
   length="1"
   follows="left|top"
   height="15"
   layout="topleft"
   left_delta="3"
   name=" Mouse Sensitivity"
   top_pad="15"
   width="160"
   wrap="true">
    Mouselook mouse sensitivity:
  </text>
  <slider
   control_name="MouseSensitivity"
   follows="left|top"
   height="15"
   initial_value="2"
   layout="topleft"
   show_text="false"
   left_pad="0"
   max_val="15"
   name="mouse_sensitivity"
   top_delta="-1"
   width="115" />
  <check_box
   control_name="InvertMouse"
   height="16"
   label="Invert"
   layout="topleft"
   left_pad="2"
   name="invert_mouse"
   top_delta="0"
   width="128" />
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="86"
   name="single_click_action_lbl"
   width="150"
   top_pad="30">
    Single click on land:
  </text>
  <combo_box
   height="23"
   layout="topleft"
   left_pad="10"
   top_delta="-6"
   name="single_click_action_combo"
   width="200">
    <combo_box.item
     label="No action"
     name="0"
     value="0"/>
    <combo_box.item
     label="Move to clicked point"
     name="1"
     value="1"/>
    <combo_box.commit_callback
     function="Pref.ClickActionChange"/>
  </combo_box>
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="86"
   name="double_click_action_lbl"
   width="150"
   top_pad="12">
    Double click on land:
  </text>
  <combo_box
   height="23"
   layout="topleft"
   left_pad="10"
   top_delta="-6"
   name="double_click_action_combo"
   width="200">
    <combo_box.item
     label="No action"
     name="0"
     value="0"/>
    <combo_box.item
     label="Move to clicked point"
     name="1"
     value="1"/>
    <combo_box.item
     label="Teleport to clicked point"
     name="2"
     value="2"/>
    <combo_box.commit_callback
     function="Pref.ClickActionChange"/>
  </combo_box>
  <button
   height="23"
   label="Other Devices"
   left="30"
   name="joystick_setup_button"
   top="45"
   width="155">
    <button.commit_callback
     function="Floater.Show"
     parameter="pref_joystick" />
  </button>
</panel>