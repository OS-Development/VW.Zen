<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Camera"
 layout="topleft"
 left="102"
 name="camera_panel"
 top="1"
 width="517">
	<icon
     follows="left|top"
     height="18"
     image_name="Cam_FreeCam_Off"
     layout="topleft"
     name="camera_icon"
     mouse_opaque="false"
     visible="true"
     width="18"
     left="30"
     top="15"/>
	<text
	follows="left|top"
	layout="topleft"
	type="string"
	length="1"
	height="10"
	left_pad ="30"
	top_delta="5"
	name="heading2"
	width="115">
    Automatic Position:
	</text>
	<check_box
     control_name="EditCameraMovement"
     height="20"
     follows="left|top"
     label="Build/Edit"
     layout="topleft"
     left_pad="10"
	 top_delta="-5"
     name="edit_camera_movement"
     tool_tip="Use automatic camera positioning when entering and exiting edit mode"
     width="90" />
	<check_box
	control_name="AppearanceCameraMovement"
	follows="left|top"
	height="16"
	label="Appearance"
	layout="topleft"
	left_pad="20"
	name="appearance_camera_movement"
	tool_tip="Use automatic camera positioning while in edit mode"
	width="90" />
  <slider
   can_edit_text="true"
   control_name="CameraAngle"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1.57"
   layout="topleft"
   label_width="100"
   label="View angle"
   left="30"
   top_pad="20"
   max_val="2.97"
   min_val="0.17"
   name="camera_fov"
   show_text="true"
   width="375" />
   <slider
     can_edit_text="true"
     control_name="DynamicCameraStrength"
     decimal_digits="2"
     follows="left|top"
     height="16"
     increment="1"
     initial_value="2"
     layout="topleft"
     label="Camera Lag"
     left_delta="0"
     label_width="100"
     max_val="60"
     min_val="0"
     name="camera_lag"
     show_text="true"
     width="375"
     top_pad="5"/>
  <slider
   can_edit_text="true"
   control_name="CameraOffsetScale"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1"
   layout="topleft"
   label="Distance"
   left_delta="0"
   label_width="100"
   max_val="3"
   min_val="0.5"
   name="camera_offset_scale"
   show_text="true"
   width="375"
   top_pad="5"/>
   <slider
     can_edit_text="true"
     control_name="CameraPositionSmoothing"
     decimal_digits="2"
     follows="left|top"
     height="16"
     increment="0.025"
     initial_value="1"
     layout="topleft"
     label="Smoothing"
     left_delta="0"
     label_width="100"
     max_val="40"
     min_val="0.5"
     name="camera_position_smoothing"
     show_text="true"
     width="375"
     top_pad="5"/>
     <slider
     can_edit_text="true"
     control_name="ZoomTime"
     decimal_digits="2"
     follows="left|top"
     height="16"
     increment="0.05"
     initial_value="1"
     layout="topleft"
     label="Zoom Time"
     left_delta="0"
     label_width="100"
     max_val="10"
     min_val="0"
     name="zoomtime"
     show_text="true"
     width="375"
     top_pad="5"/>
	<check_box
     control_name="DisableCameraConstraints"
     follows="left|top"
     height="20" initial_value="false"
     label="Disable Camera Constrains"
     layout="topleft"
     left="30"
     name="DisableCameraConstraints"
     tool_tip="Disables the Camera Constrains which prevent your Camera from moving infinite in all directions dependless of the View Distance"
     width="200"
     top_pad="15"/>
	<check_box
		control_name="RenderDepthOfField"
		height="16"
        initial_value="true"
        label="Depth of Field Enabled"
        layout="topleft"
        top_pad="5" 
        left="30"
        name="DOFEnabled"
        tool_tip="Render Depth of Field in deferred rendering."
        width="325" />
	   <slider
        control_name="CameraFNumber"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="1"
        initial_value="9.00"
        label="Camera F Number:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="64"
        min_val="1"
        name="CameraFNum"
	    tool_tip="Camera f-number value for DoF effect"
        top_pad="20"
        width="435" />
	   <slider
        control_name="CameraFocalLength"
        decimal_digits="1"
        follows="left|top"
        height="16"
        increment="1"
        initial_value="50"
        label="Camera Focal Length mm:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="1000"
        min_val="1"
        name="CameraFocal"
	    tool_tip="Camera focal length for DoF effect (in millimeters)"
        top_pad="5"
        width="435" />	
	   <slider
        control_name="CameraFieldOfView"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="1"
        initial_value="60"
        label="Camera FOV degs:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="200"
        min_val="10"
        name="Camera FOV"
	    tool_tip="Vertical camera field of view for DoF effect (in degrees)"
        top_pad="5"
        width="435" />
	   <slider
        control_name="CameraAspectRatio"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="0.05"
        initial_value="1.5"
        label="Camera Aspect Ratio:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="5"
        min_val="0"
        name="CameraAspectRatio"
	    tool_tip="Camera aspect ratio for DoF effect"
        top_pad="5"
        width="435" />
	   <slider
        control_name="CameraFocusTransitionTime"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="0.01"
        initial_value="0.5"
        label="DOF Focus Transition Time:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="10"
        min_val="0.1"
        name="CameraFocusTrans"
	    tool_tip="Time taken to alter focus from one place to the next"
        top_pad="5"
        width="435" />
	   <slider
        control_name="CameraMaxCoF"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="0.1"
        initial_value="10.0"
        label="DOF Circle of Confusion:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="10"
        min_val="0.1"
        name="CameraCircleConfusion"
	    tool_tip="Maximum camera circle of confusion for DoF effect"
        top_pad="5"
        width="435" />
	   <slider
        control_name="CameraDoFResScale"
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="0.05"
        initial_value="0.70"
        label="DOF Resolution Scale Down:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="1"
        min_val="0.25"
        name="CameraDoFRes"
	    tool_tip="Amount to scale down depth of field resolution.  Valid range is 0.25 (quarter res) to 1.0 (full res)"
        top_pad="5"
        width="435" />
		<slider
        control_name="CameraUnderWaterDistortion"
        vdecimal_digits="1"
        follows="left|top"
        height="16"
        increment="0.1"
        initial_value="0"
        label="DOF Distortion Strength:"
        label_width="160"
        layout="topleft"
        left="30"
        max_val="30"
        min_val="0"
        name="CameraUWD"
		tool_tip="Set strength (FoV) of underwater distortion."
        top_pad="5"
        width="432" />
  
</panel>