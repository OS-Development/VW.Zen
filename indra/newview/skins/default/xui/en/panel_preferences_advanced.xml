<?xml version="1.0" encoding="UTF-8"?>
<panel
 border="true"
 follows="all"
 height="408"
 label="Advanced"
 layout="topleft"
 left="102"
 name="advanced"
 top="1"
 width="517">
	<panel.string
     name="aspect_ratio_text">
        [NUM]:[DEN]
    </panel.string>
  
   
    <check_box
     control_name="ShowScriptErrors"
     follows="left|top"
     height="20"
     label="Show script errors in:"
     layout="topleft"
     left="30"
     top="15" 
     name="show_script_errors"
     width="150" />
    <radio_group
     enabled_control="ShowScriptErrors"
     control_name="ShowScriptErrorsLocation"
     follows="top|left"
     draw_border="false"
     height="16"
     layout="topleft"
     left_pad="20"
     name="show_location"
     width="364">
        <radio_item
         height="16"
         label="Nearby chat"
         layout="topleft"
         left="3"
         name="0"
         top="0"
         width="315" />
        <radio_item
         height="16"
         label="Separate window"
         layout="topleft"
         left_delta="150"
         name="1"
         top_delta="0"
         width="315" />
    </radio_group>

    <check_box
     control_name="FullScreen"
     follows="top|left"
     height="15"
     label="Full Screen"
     layout="topleft"
     left="30"
     name="full_screen"
     top_pad="20"
     width="100"/>
	<text
     font="SansSerifSmall"
     type="string"
     text_color="Yellow"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
	 top_delta="-1"
     left_pad="-10"
     name="skin_textbox1"
     width="200">
        (Requires Restart)
    </text>
	<check_box
     control_name="AllowMultipleViewers"
     follows="top|left"
     height="15"
     label="Allow Multiple Viewers"
     layout="topleft"
     left="30"
     name="allow_multiple_viewer_check"
     top_pad="2"
     width="237"/>
    <check_box
     control_name="UseDebugMenus"
     follows="top|left"
     height="15"
     label="Show Advanced Menu"
     layout="topleft"
     left="30"
     name="show_advanced_menu_check"
     top_pad="4"
     width="237"/>
	 <check_box
     control_name="ForceShowGrid"
     follows="top|left"
     height="15"
     label="Show Grid Selection at login"
     layout="topleft"
     left="30"
     name="show_grid_selection_check"
     top_pad="4"
     width="237"/>
	 <check_box
     control_name="ShowUserName@GridName"
     follows="top|left"
     height="15"
     label="Show Username @ Gridname at login"
     layout="topleft"
     left="30"
     name="show_grid_name"
     top_pad="4"
     width="237"/>
	<check_box
        control_name="ImagePipelineUseHTTP"
        height="15"
        label="HTTP Get Textures"
        layout="topleft"
        left="30"
        name="HTTPGet"
        top_pad="12"
        width="200" /> 
        <check_box
        control_name="EnableTextureAtlas"
        height="15"
        label="Texture Atlas"
        layout="topleft"
        left="30"
        name="Atlas"
        top_pad="4"
        width="200" />
        <check_box
        control_name="AnimateTextures"
        height="15"
        label="Animate Textures"
        layout="topleft"
        left="30"
        name="AnimTextures"
        top_pad="4"
        width="200" />
        <check_box
        control_name="AuditTexture"
        height="15"
        label="Texture Auditing"
        layout="topleft"
        left="30"
        name="TexAudit"
        top_pad="4"
        width="200" />
        <check_box
        control_name="TextureLoadFullRes"
        height="15"
        label="Full Resolution Textures"
        layout="topleft"
        left="30"
        name="FullResTextures"
        top_pad="4"
        width="200" />
        <check_box
        control_name="RenderWaterMipNormal"
        visiblity_control="VertexShaderEnable"
        height="15"
        label="Water Mip Maps"
        layout="topleft"
        left="30"
        name="MipMaps"
        top_pad="4"
        width="200" />
		<check_box
        control_name="NoPreload"
        height="15"
        label="Disable Texture/Sound Preload"
        layout="topleft"
        left="30"
        name="NoPreload"
        top_pad="4"
        width="200" />
        <check_box
        control_name="RenderUseFarClip"
        height="16"
        label="Use Far Clip"
        layout="topleft"
        left="30"
	tool_tip="Switches between the normal Camera Mode where Objects get derendered when moving your Camera away from them and a more -from Avatar- like rendering method where everything until your Render Range gets rendered no matter if you are zooming away"
        name="RenderUseFarClip"
        top_pad="4"
        width="200" />
        <check_box
        control_name="RenderAutoMaskAlphaNonDeferred"
        height="15"
        label="Non Deferred Alpha Mask"
        layout="topleft"
        left="30"
        name="ND Alpha"
        top_pad="12"
        width="200" />
        <check_box
        control_name="RenderAutoMaskAlphaDeferred"
        height="15"
        label="Deferred Alpha Mask"
        layout="topleft"
        left="30"
        name="DEF Alpha"
        top_pad="4"
        width="200" />
		<slider
        control_name="BackgroundYieldTime"
        decimal_digits="0"
        follows="left|top"
        height="16"
        increment="1"
        label="Background Yield Time:"
        label_width="165"
        layout="topleft"
        left="30"
        max_val="120"
        min_val="0"
        name="BackgroundYieldTime"
        top_pad="15"
        width="447" />
</panel>
