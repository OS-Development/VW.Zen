<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Visual Auto-Mute"
 layout="topleft"
 left="102"
 name="automute_panel"
 top="1"
 width="517">
	<text
	 type="string"
	 font="SanSerifBig"
	 length="1"
	 follows="left|top"
	 height="20"
	 layout="topleft"
	 left="60"
	 name="AutomuteText"
	 word_wrap="true"
	 top="20"
	 width="400">
		Visually Auto-Mute other avatars due to excessive attachment "Geometry Bytes" and attachment "Surface Area".
	</text>
	<check_box
	 control_name="VAMDisplayInfo"
	 height="16"
	 initial_value="true"
	 label="Display Auto-Mute Hovertext"
	 layout="topleft"
	 follows="left|top"
	 left="75"
	 name="attachment_bytes"
	 tool_tip="Display hovertext of attachment geometry bytes here so render cost will override."
	 top_pad="30"
	 width="315">
	 <check_box.commit_callback
		function="Pref.AttachmentBytes" />
	</check_box>
	 
	 <view_border
	 top_pad="30"
	 left="10"
	 bevel_style="none"
	 border_thickness="1"
	 follows="left|top"
	 layout="topleft"
	 height="145"
	 name="PivotBorder"
	 width="495"/>
	 
	 
	 <text
	 type="string"
	 font="SanSerifBig"
	 length="1"
	 follows="left|top"
	 height="16"
	 layout="topleft"
	 left="35"
	 name="AutomuteText"
	 top_pad="-127"
	 width="450">
		Set limits for avatar attachments to be visually auto-muted (0 = No Limit).
	</text>
	 
	 
	 
	<slider
	 control_name="RenderAutoMuteByteLimit"
	 can_edit_text="true"
	 decimal_digits="0"
	 follows="left|top"
	 height="16"
	 increment="100"
	 initial_value="0"
	 label="Byte Limit"
	 label_width="80"
	 layout="topleft"
	 left="20"
	 top_pad="20"
	 max_val="50000"
	 min_val="0"
	 name="ByteLimit"
	 width="435" />
	 <text
	 type="string"
	 length="1"
	 follows="left|top"
	 height="12"
	 layout="topleft"
	 left_pad="5"
	 top_delta="2"
	 name="AutomuteText1"
	 width="128">
		(KB)
	</text>
	
	<slider
	 control_name="RenderAutoMuteSurfaceAreaLimit"
	 can_edit_text="true"
	 decimal_digits="2"
	 follows="left|top"
	 height="16"
	 increment="10"
	 initial_value="0"
	 label="Surface Limit"
	 label_width="80"
	 layout="topleft"
	 left="20"
	 top_pad="20"
	 max_val="500"
	 min_val="0"
	 name="SurfaceLimit"
	 width="435" />
	 <text
	 type="string"
	 length="1"
	 follows="left|top"
	 height="12"
	 layout="topleft"
	 left_pad="5"
	 top_delta="2"
	 name="AutomuteText2"
	 width="128">
		(m^2)
	</text>
	
	<text
	 type="string"
	 font="SanSerifSmall"
	 text_color="Yellow"
	 length="1"
	 follows="left|top"
	 height="12"
	 layout="topleft"
	 left="75"
	 name="AutomuteText"
	 top_pad="20"
	 width="450">
		Hint: Start at maximum then lower to acceptable threshold.
	</text>
	
	<text
	 type="string"
	 font="SanSerifBig"
	 length="1"
	 word_wrap="true"
	 follows="left|top"
	 height="16"
	 layout="topleft"
	 left="65"
	 name="AutomuteText"
	 top_pad="40"
	 width="400">
		Note: Visually muting avatars renders them as gray impostors. This feature does not visually mute your own avatar.
	</text>
	 
	 
	 
 </panel>     
		